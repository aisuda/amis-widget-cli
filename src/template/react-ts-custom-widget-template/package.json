{
  "name": "react-ts-custom-widget-template",
  "version": "1.0.0",
  "description": "amis自定义组件模板（react&ts技术栈）",
  "keywords": [
    "自定义组件模板",
    "react&ts技术栈",
    "amis自定义组件",
    "amis-editor自定义插件"
  ],
  "author": "fex",
  "license": "MIT",
  "scripts": {
    "dev": "amis dev",
    "preview": "amis preview",
    "linkDebug": "amis linkDebug",
    "build2lib": "amis build2lib",
    "format": "prettier --write \"src/**/**/*.{js,jsx,ts,tsx,vue,scss,json}\""
  },
  "files": [
    "dist/*"
  ],
  "framework": "react",
  "amis-widgets": [
    {
      "name": "react-info-card",
      "framework": "react",
      "usage": "renderer",
      "type": "react-info-card",
      "entry": "/dist/reactInfoCard.umd",
      "files": [
        "/dist/reactInfoCard.css"
      ],
      "editorPlugin": {
        "name": "react-info-card-plugin",
        "description": "信息展示卡片",
        "pluginEntry": "/dist/reactInfoCardPlugin.umd",
        "tag": [
          "展示"
        ],
        "sort": 100
      }
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/**/*.{js,jsx,ts,tsx,vue,scss,json}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://git@github.com:aisuda/react-ts-custom-widget-template.git"
  },
  "bugs": {
    "url": "https://github.com/aisuda/react-ts-custom-widget-template/issues"
  },
  "dependencies": {
    "amis-widget": "^1.3.7",
    "antd": "^3.26.20",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.15",
    "amis-widget-cli": "^1.5.15",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5"
  },
  "engines": {
    "node": ">= 10.13.0",
    "npm": ">= 6.4.1"
  }
}
